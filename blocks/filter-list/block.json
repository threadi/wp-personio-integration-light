{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "wp-personio-integration/filter-list",
	"version": "@@VersionNumber@@",
	"title": "Personio List Filter",
	"category": "widgets",
	"icon": "list-view",
	"description": "Provides a Gutenberg block to show filter as link-based dropdown-list for Personio Positions.",
	"keywords": ["Personio", "Positions", "Position"],
	"supports": {
		"html": false,
	  	"anchor": true,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"textdomain": "wp-personio-integration",
	"editorScript": "file:build/index.js",
	"editorStyle": "file:build/index.css",
	"attributes": {
		"filter": {
			"type": "array",
			"default": ["recruitingCategory","schedule","office"]
		},
		"blockId": {
			"type": "string",
			"default": ""
		},
		"textColor": {
			"type": "string"
		},
		"linkColor": {
			"type": "string"
		},
		"backgroundColor": {
			"type": "string"
		},
		"hideFilterTitle": {
			"type": "boolean",
			"default": false
		},
		"hideResetLink": {
			"type": "boolean",
			"default": false
		},
		"space_between": {
			"type": "integer",
			"default": 0
		}
	}
}