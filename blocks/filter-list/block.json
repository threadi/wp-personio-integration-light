{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "wp-personio-integration/filter-list",
	"version": "@@VersionNumber@@",
	"title": "Personio List Filter",
	"category": "personio-integration",
	"description": "Provides a Gutenberg block to show filter as link-based dropdown-list for Personio Positions.",
	"keywords": ["Personio", "Positions", "Position"],
	"supports": {
        "anchor": true,
		"color": {
			"gradients": true,
			"link": true
		},
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		},
		"__experimentalBorder": true
	},
	"textdomain": "personio-integration-light",
	"editorScript": "file:build/index.js",
	"editorStyle": "file:build/index.css",
	"style": "file:build/style-index.css",
	"attributes": {
		"preview": {
			"type": "boolean",
			"default": false
		},
		"filter": {
			"type": "array",
			"default": ["recruitingCategory","schedule","office"]
		},
		"blockId": {
			"type": "string",
			"default": ""
		},
		"hideFilterTitle": {
			"type": "boolean",
			"default": false
		},
		"hideResetLink": {
			"type": "boolean",
			"default": false
		},
		"space_between": {
			"type": "integer",
			"default": 0
		},
        "anchor": {
            "type": "string",
            "default": ""
        },
        "link_to_anchor": {
            "type": "string",
            "default": ""
        }
	},
	"example": {
		"attributes": {
			"preview": true,
			"filter": ["recruitingCategory","schedule","office"],
			"blockId": "personio-example",
			"hideFilterTitle": true,
			"hideSubmitButton": true,
			"hideResetLink": true
		}
	}
}
