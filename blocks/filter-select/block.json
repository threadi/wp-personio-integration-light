{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "wp-personio-integration/filter-select",
	"version": "2.1.0",
	"title": "Personio Select Filter",
	"category": "widgets",
	"icon": "list-view",
	"description": "Provides a Gutenberg block to show filter as dropdown-list for Personio Positions.",
	"keywords": ["Personio", "Positions", "Position"],
	"supports": {
		"color": {
			"gradients": true,
			"link": true
		},
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		},
		"__experimentalBorder": true
	},
	"textdomain": "wp-personio-integration",
	"editorScript": "file:build/index.js",
	"editorStyle": "file:build/index.css",
	"attributes": {
		"filter": {
			"type": "array",
			"default": ["recruitingCategory","schedule","office"]
		},
		"blockId": {
			"type": "string",
			"default": ""
		},
		"hideFilterTitle": {
			"type": "boolean",
			"default": false
		},
		"hideSubmitButton": {
			"type": "boolean",
			"default": false
		},
		"hideResetLink": {
			"type": "boolean",
			"default": false
		}
	}
}